generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Material {
  iDMaterial      Int    @id @default(autoincrement())
  iDUser   Int
  material String
  caracteristicas String
  email String
  telefono Int
  fotoUrl String
}

model Usuarios {
  iDUser      Int    @id @default(autoincrement())
  nombre   String
  apellido String
  mail String
  telefono Int
  contrasena String
}

model ChatBot{
  iDChat Int @id@default(autoincrement())
  iDUser Int
  mensajeUsuario String
  mensajeBot String
}